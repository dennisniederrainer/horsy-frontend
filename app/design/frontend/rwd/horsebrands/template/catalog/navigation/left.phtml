<?php if (!Mage::registry('current_category')) return ?>
<?php $_categories = $this->getCurrentChildCategories() ?>
<?php $_count = is_array($_categories)?count($_categories):$_categories->count(); ?>
<?php if($_count): ?>
<div class="block block-layered-nav">
    <div class="block-title">
        <strong><span><?php echo $this->__('Browse By') ?></span></strong>
    </div>
    <div class="block-content">
        <dl id="narrow-by-list2">
            <dt class="title"><?php echo $this->__('Category') ?></dt>
            <dd>
                <ul>
                <?php foreach ($_categories as $_category): ?>
                    <?php if($_category->getIsActive()): ?>
                    <?php $subCatHtml = $this->getNextLayerHtml($_category) ?>
                    <li class="cat-nav-element<?php echo ($subCatHtml ? ' hasSubcategories' : '') ?>">
                        <a href="<?php echo $this->getCategoryUrl($_category) ?>" class="first <?php if ($this->isCategoryActive($_category)): ?> current<?php endif; ?>">
                          <?php echo $this->escapeHtml($_category->getName()) ?><?php if($subCatHtml): ?><i class="fa fa-chevron-right"></i><?php endif; ?>
                        </a>
                        <?php if( $subCatHtml && $subCatHtml != '' ): ?>
                          <ul class="subcat-layer" style="display:none;">
                            <?php echo $subCatHtml; ?>
                          </ul>
                        <?php endif; ?>
                    </li>
                    <?php endif; ?>
                <?php endforeach ?>
                </ul>
            </dd>
        </dl>
        <script type="text/javascript">decorateDataList('narrow-by-list2')</script>
    </div>
</div>
<script>
  jQuery(document).ready(function($j) {
    $j('.cat-nav-element').on('click', function(e) {
      e.preventDefault();

      if($j(this).hasClass('hasSubcategories')) {
        var $icon = $j(this).find('a i.fa');

        if($icon.hasClass('fa-chevron-right')) {
          $icon.removeClass('fa-chevron-right');
          $icon.addClass('fa-chevron-down');
        } else if ($icon.hasClass('fa-chevron-down')) {
          $icon.removeClass('fa-chevron-down');
          $icon.addClass('fa-chevron-right');
        }

        $j(this).find('.subcat-layer').toggle();
      } else {
        window.location = $j(this).find('a').attr('href');
      }
    });
  });
</script>
<?php endif; ?>
<div class="seo-text">
  <?php echo Mage::registry('current_category')->getDescription(); ?>
</div>
